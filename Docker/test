FROM centos
MAINTAINER HZW<505878631@qq.com>

COPY readme.txt /usr/local/readme.txt

ADD JDK.zip /usr/local/
ADD Tomcat8080.zip /usr/local/

RUN yum -y install vim

ENV MYPATH /usr/local
WORKDIR $MYPATH

ENV JAVA_HOME /usr/local/JDK
ENV CLASSPATH $JAVA_HOME/lib/dt.jar:$JAVA_HOME/lib/tools.jar
ENV CATALINA_HOME /usr/local/Tomcat8080.zip
ENV CATALINA_BASH /usr/local/Tomcat8080.zip
EVN PATH $PATH:$JAVA_HOME/bin:$CATALINA_HOME/lib:$CATALINA_HOME/bin

EXPOSE 8080

CMD /usr/local/Tomcat8080/bin/startup.sh && tail -F /url/local/Tomcat8080/logs/catalina.out